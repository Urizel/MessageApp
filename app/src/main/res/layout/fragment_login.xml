<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/fragment_login_username"
        android:layout_marginBottom="8dp"
        android:hint="UserName"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/fragment_login_password"
        android:inputType="textPassword"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/fragment_login_username"
        android:hint="Password"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:layout_below="@id/fragment_login_password"
        android:background="@color/primary_color_darker"
        android:textColor="#ffffff"
        android:id="@+id/frafment_login_loginButton"/>
</RelativeLayout>